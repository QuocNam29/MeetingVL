@model IEnumerable<MeetingVL.Models.ProjectParticipant>

@{
    ViewBag.Title = "Student_SReport";
    Layout = "~/Views/Shared/_Layout_MeetingVL.cshtml";
    int no = 0;
}





<section id="basic-tabs-components">

    <div class="row match-height">
        <div class="col-xl-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">My Project - MeetingVL</h4>

                    </div>
                </div>

                <div class="card-body">
                    <div class="card-block">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" id="base-tabX1" data-toggle="tab" aria-controls="tab1" href="#tab1" aria-expanded="true">Student</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " id="base-tabX2" data-toggle="tab" aria-controls="tab2" href="#tab2">Management assignment</a>
                            </li>

                        </ul>
                        <div class="tab-content px-1 pt-1">
                            <div class="tab-pane active" id="tab1" aria-expanded="true" aria-labelledby="base-tabX1">
                                @using (Html.BeginForm("Index", "ProjectParticipants", FormMethod.Get))
                                {
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="col-lg-6 input-wrap">
                                                <div class="input-group">

                                                    <input type="text" class="form-control" placeholder="Search for..." name="keyword">
                                                    <div class="input-group-append">
                                                        <button class="btn btn-primary" type="submit">Go!</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row">

                                    @foreach (var item in Model)
                                    {
                                     
                                        no++;
                                        <div class="col-xl-3 col-lg-6 col-12">
                                            @if (no % 4 == 1)
                                            {
                                                <div class="card bg-success">
                                                    <a href="@Url.Action("Student_SReport","Session_Reports",new { project_id = item.Project.ID, active = 1})" class="card-body">
                                                        <div class="px-3 py-3">
                                                            <div class="row text-white">
                                                                <div class="col-12 courses-wrap">
                                                                    <h1>
                                                                        <i class="fa fa-star-o background-round text-white p-2 font-medium-3"></i>
                                                                    </h1>
                                                                    <h4 class="courses-num font-medium-3 text-bold-400">@item.Project.Name</h4>
                                                                    <p class="courses-time font-small-3">
                                                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_Start)</span>
                                                                        <span>-</span>
                                                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_End)</span>
                                                                    </p>
                                                                </div>
                                                            </div>


                                                        </div>
                                                    </a>
                                                </div>

                                            }
                                            else if (no % 4 == 2)
                                            {

                                                <div class="card bg-danger">
                                                    <a href="@Url.Action("Student_SReport","Session_Reports",new { project_id = item.Project.ID, active = 1})" class="card-body">
                                                        <div class="px-3 py-3">
                                                            <div class="row text-white">
                                                                <div class="col-12 courses-wrap">
                                                                    <h1>
                                                                        <i class="fa fa-star-o background-round text-white p-2 font-medium-3"></i>
                                                                    </h1>
                                                                    <h4 class="courses-num font-medium-3 text-bold-400">@item.Project.Name</h4>
                                                                    <p class="courses-time font-small-3">
                                                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_Start)</span>
                                                                        <span>-</span>
                                                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_End)</span>
                                                                    </p>
                                                                </div>
                                                            </div>


                                                        </div>
                                                    </a>
                                                </div>

                                            }
                                            else if (no % 4 == 3)
                                            {

                                                <div class="card bg-info">
                                                    <a href="@Url.Action("Student_SReport","Session_Reports",new { project_id = item.Project.ID, active = 1})" class="card-body">
                                                        <div class="px-3 py-3">
                                                            <div class="row text-white">
                                                                <div class="col-12 courses-wrap">
                                                                    <h1>
                                                                        <i class="fa fa-star-o background-round text-white p-2 font-medium-3"></i>
                                                                    </h1>
                                                                    <h4 class="courses-num font-medium-3 text-bold-400">@item.Project.Name</h4>
                                                                    <p class="courses-time font-small-3">
                                                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_Start)</span>
                                                                        <span>-</span>
                                                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_End)</span>
                                                                    </p>
                                                                </div>
                                                            </div>


                                                        </div>
                                                    </a>
                                                </div>

                                            }
                                            else if (no % 4 == 0)
                                            {

                                                <div class="card bg-warning">
                                                    <a href="@Url.Action("Student_SReport","Session_Reports",new { project_id = item.Project.ID, active = 1})" class="card-body">
                                                        <div class="px-3 py-3">
                                                            <div class="row text-white">
                                                                <div class="col-12 courses-wrap">
                                                                    <h1>
                                                                        <i class="fa fa-star-o background-round text-white p-2 font-medium-3"></i>
                                                                    </h1>
                                                                    <h4 class="courses-num font-medium-3 text-bold-400">@item.Project.Name</h4>
                                                                    <p class="courses-time font-small-3">
                                                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_Start)</span>
                                                                        <span>-</span>
                                                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Project.Date_End)</span>
                                                                    </p>
                                                                </div>
                                                            </div>


                                                        </div>
                                                    </a>
                                                </div>

                                            }
                                        </div>
                                    }

                                </div>
                            </div>

                            <div class="tab-pane " id="tab2" aria-labelledby="base-tabX2">
                                @Html.Action("Project_management", "ProjectParticipants")

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<!--End-->
