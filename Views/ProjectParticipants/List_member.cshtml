@model List<MeetingVL.Models.ProjectParticipant>

@{
    Layout = null;
    int no = 0;
    int project_id = int.Parse(TempData["project_id"].ToString());
    string Role = TempData["roles_Project"].ToString();
    var List_Group = Model.Where(g => g.Group_ID != null).GroupBy(p => p.Group_ID).OrderBy(o => o.Key).Select(s => new
    {
        group_id = s.Key,
        group_name = Model.Where(g => g.Group_ID == s.Key).FirstOrDefault().Group.Name
    }) ;
}

<div class="col-lg-12 col-md-6 col-sm-12">
    @if (Session["ViewBag.FileStatus"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Session["ViewBag.FileStatus"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>

            </button>
        </div>
        Session["ViewBag.FileStatus"] = null;
    }

    @if (Session["ViewBag.Success"] != null)
    {
        int success = int.Parse(Session["ViewBag.Success"].ToString());
        int failFormat = int.Parse(Session["ViewBag.FailFormat"].ToString());
        int exist = int.Parse(Session["ViewBag.Exist"].ToString());
        int miss = int.Parse(Session["ViewBag.MissData"].ToString());
        int count = success + failFormat + exist + miss;
        <button type="button" hidden class="btn btn-lg btn-block btn-outline-success mb-2" id="import-success"
                data-toggle="modal" data-target="#Success">
            Success
        </button>
        <script>
            window.onload = function () {
                document.getElementById('import-success').click();
            }
        </script>
        <!-- Modal -->
        <div class="modal fade text-left" id="Success" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="myModalLabel34">Result</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="col-12">
                            <a> Successfully imported <b>"@success"</b> among <b>"@count"</b> students in the file</a>
                            </div>
                        <br />
                        <div class="col-12">
                            <div class="alert alert-success">
                                <strong>Success!</strong> Import student list successful ! <b>(@success row data)</b>
                            </div>
                            <div class="alert alert-danger">
                                <strong>Fail!</strong> Import failed due to incorrect mail format ! <b>(@failFormat row data) </b>
                            </div>
                            <div class="alert alert-warning">
                                <strong>Miss Data!</strong>  Import failed due to missing data ! <b>(@miss row data)</b>
                            </div>
                            <div class="alert alert-info">
                                <strong>Exist!</strong>  Already exist in the project ! <b>(@exist row data)</b>
                            </div>
                        </div>
                        </div>
                    <div class="modal-footer">
                        <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="Cancel">
                       
                    </div>


                </div>
            </div>
        </div>

        Session["ViewBag.Success"] = null;
    }
</div>
<section id="file-export">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-body collapse show">

                    <div class="card-block card-dashboard">

                        @if (Role == "Manager")
                        {
                            <div id="btnAdd" class="btn btn-primary mb-2" data-toggle="modal" data-target="#AddStudent">
                                <i class="ft-plus"></i>
                                Add Student
                            </div>


                            <a class="btn btn-social btn-round btn-min-width mr-2 mb-2 btn-excel" data-toggle="modal" data-target="#iconForm">
                                <span class="fa fa-file-excel-o"></span> Import Excel
                            </a>

                            <a class="btn btn-social btn-round btn-min-width mr-2 mb-2 btn-Download" href="@Url.Action("DownLoad","Import_Student")" >
                                <span class="ft ft-download"></span> Down fortmat Excel
                            </a>

                        }
                        <table class="table table-striped table-bordered file-export">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Group</th>
                                    <th>Role</th>
                                    @if (Role == "Manager")
                                    {
                                        <th> </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.User_ID != null)
                                    {


                                        string EditStudent = "EditStudent" + item.ID;
                                        string DeleteStudent = "DeleteStudent" + item.ID;
                                        no++;
                                <tr>
                                    <td>@no</td>
                                    <td>@item.User.Name</td>
                                    <td>@item.User_ID</td>
                                    @if (item.Group_ID != null)
                                    {
                                        <td>@item.Group.Name</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>@item.Role</td>
                                    @if (Role == "Manager" && item.User_ID != Session["ID_User"].ToString())
                                    {
                                        <td>
                                            <a class="success p-0" data-toggle="modal" data-target="#@EditStudent">
                                                <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                            </a>
                                            <div class="modal fade text-left" id="@EditStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h3 class="modal-title" id="myModalLabel34">Edit student</h3>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        @using (Html.BeginForm("Edit", "ProjectParticipants", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                        {
                                                            @Html.Hidden("project_id", project_id)
                                                            <div class="modal-body">
                                                                <div class="col-12">


                                                                    <div class="form-group">
                                                                        <label for="projectinput1">Email</label>
                                                                        <input type="text" id="projectinput1" class="form-control" name="email" value="@item.User_ID" readonly />
                                                                    </div>


                                                                    <label for="projectinput1">Group</label>
                                                                    <select class="custom-select form-control " id="Group" data-placeholder="Type to search cities" name="group_id">
                                                                        @if (@item.Group_ID != null)
                                                                        {
                                                                            <option value="@item.Group_ID">@item.Group.Name</option>
                                                                        }
                                                                        <option value="none">-------None-------</option>
                                                                        @*@Html.Action("List_Group_formAdd", "ProjectParticipants", new { project_id = project_id })*@

                                                                        @foreach (var group in List_Group)
                                                                        {

                                                                            <option value="@group.group_id">@group.group_name</option>

                                                                        }
                                                                    </select>
                                                                    <div class="form-group">
                                                                        <label for="projectinput3">Role</label>
                                                                        <select id="projectinput5" name="role" class="form-control">
                                                                            @if (item.Role == "Manager")
                                                                            {
                                                                                <option value="Manager">Manager</option>
                                                                                <option value="Student">Student</option>
                                                                            }
                                                                            else if (item.Role == "Student")
                                                                            {
                                                                                <option value="Student">Student</option>
                                                                                <option value="Manager">Manager</option>
                                                                            }
                                                                        </select>
                                                                    </div>


                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="Cancel">
                                                                <input type="submit" class="btn btn-outline-primary btn-lg" value="Save">
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                            <a class="danger p-0" data-toggle="modal" data-target="#@DeleteStudent">
                                                <i class="fa fa-trash-o font-medium-3 mr-2"></i>
                                            </a>
                                            <div class="modal fade text-left" id="@DeleteStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title" id="myModalLabel1"><b>Notification</b></h4>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h5>Are you sure?</h5>
                                                            <p>Are you sure you want to remove <b>"@item.User.Email"</b> from the project !!!</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            @using (Html.BeginForm("Delete", "ProjectParticipants", new { id = item.ID }))
                                                            {
                                                                @Html.Hidden("project_id", project_id)

                                                                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="btn btn-outline-primary">Yes</button>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                </tr>

                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Group</th>
                                    <th>Role</th>
                                    @if (Role == "Manager")
                                    {
                                        <th></th>
                                    }
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- File export table -->
<div class="col-lg-4 col-md-6 col-sm-12">
    <div class="form-group">
        <!-- Modal -->
        <div class="modal fade text-left" id="iconForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="myModalLabel34">Import Excel</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @using (Html.BeginForm("Index", "Import_Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
