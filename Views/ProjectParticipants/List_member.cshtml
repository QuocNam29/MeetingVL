@model List<MeetingVL.Models.ProjectParticipant>

@{
    Layout = null;
    int no = 0;
    int project_id = int.Parse(TempData["project_id"].ToString());
    string Role = TempData["roles_Project"].ToString();
}

<div class="col-lg-12 col-md-6 col-sm-12">
    @if (Session["ViewBag.FileStatus"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Session["ViewBag.FileStatus"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>

            </button>
        </div>

    }

    @if (Session["ViewBag.Success"] != null)
    {
        <div class="alert alert-success  alert-dismissible fade show" role="alert">
            @Session["ViewBag.Success"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>

    }
</div>
<section id="file-export">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-body collapse show">

                    <div class="card-block card-dashboard">

                        @if (Role == "Manager")
                        {
                            <div id="btnAdd" class="btn btn-primary mb-2" data-toggle="modal" data-target="#AddStudent">
                                <i class="ft-plus"></i>
                                Add User
                            </div>


                            <a class="btn btn-social btn-round btn-min-width mr-2 mb-2 btn-excel" data-toggle="modal" data-target="#iconForm">
                                <span class="fa fa-file-excel-o"></span> Import Excel
                            </a>

                        }
                            <table class="table table-striped table-bordered file-export">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Group</th>
                                        <th>Role</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td>@no</td>
                                            <td>@item.User.Name</td>
                                            <td>@item.User_ID</td>
                                            @if (item.Group_ID != null)
                                            {
                                                <td>@item.Group.Name</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>@item.Role</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Group</th>
                                        <th>Role</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- File export table -->
<div class="col-lg-4 col-md-6 col-sm-12">
    <div class="form-group">
        <!-- Modal -->
        <div class="modal fade text-left" id="iconForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="myModalLabel34">Import Excel</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @using (Html.BeginForm("Index", "Import_Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.Hidden("project_id", project_id)
                        <div class="modal-body">
                            <div class="col-12">
                                <input type="file" accept=".xlsx, .xls" name="postedFile" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="Cancel">
                            <input type="submit" class="btn btn-outline-primary btn-lg" value="Import" data-toggle="modal" data-target="#exampleModalCenter">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade text-left" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1"><b>Notification</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="~/Template/app-assets/img/in-progress-animate.svg" style=" display: block; margin-left: auto; margin-right: auto; width: 50%;" />
                <p> Please wait while the system is importing the list...</p>
            </div>

        </div>
    </div>
</div>
<!----Modal-->

<div class="modal fade text-left" id="AddStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="myModalLabel34">Add student</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", "ProjectParticipants", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.Hidden("project_id", project_id)
                <div class="modal-body">
                    <div class="col-12">

                        <div class="form-group">
                            <label for="projectinput1">Student</label>
                            <div class="close-char form-control" data-tags-input-name="addStudent"></div>
                        </div>
                        
                            <label for="projectinput1">Group</label>

                            @Html.Action("List_Group_formAdd", "ProjectParticipants", new { project_id = project_id })

                        

                    </div>
                </div>
                <div class="modal-footer">
                    <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-outline-primary btn-lg" value="Add">
                </div>
            }
        </div>
    </div>
</div>
