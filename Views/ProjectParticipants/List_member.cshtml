@model List<MeetingVL.Models.ProjectParticipant>

@{
    Layout = null;
    int no = 0;
    int project_id = int.Parse(TempData["project_id"].ToString());
}
<div class="col-lg-12 col-md-6 col-sm-12">
    @if (Session["ViewBag.FileStatus"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Session["ViewBag.FileStatus"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }

    @if (Session["ViewBag.Success"] != null)
    {
        <div class="alert alert-success  alert-dismissible fade show" role="alert">
            @Session["ViewBag.Success"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>

    }
</div>
<section id="file-export">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-body collapse show">

                    <div class="card-block card-dashboard">

                        <div class="complaint-add-row">
                            <div id="btnAdd" class="btn btn-primary mb-2">
                                <i class="ft-plus"></i>
                                Add User
                            </div>
                        </div>


                        <table class="table table-striped table-bordered file-export">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Group</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    no++;
                                    <tr>
                                        <td>@no</td>
                                        <td>@item.User.Name</td>
                                        <td>@item.User_ID</td>
                                        @if (item.Group_ID != null)
                                        {
                                            <td>@item.Group.Name</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                        <td>@item.Role</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Group</th>
                                    <th>Role</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


    <!-- File export table -->
    <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="form-group">

            <h5>Form with Icons</h5>

            <p>Login Form With Icon.</p>
            <br>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-warning btn-block btn-lg" data-toggle="modal" data-target="#iconForm">
                Launch Modal
            </button>

            <!-- Modal -->
            <div class="modal fade text-left" id="iconForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="myModalLabel34">Import Excel</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        @using (Html.BeginForm("Index", "Import_Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.Hidden("project_id", project_id)
                            <div class="modal-body">
                                <div class="col-12">


                                    <input type="file" accept=".xlsx, .xls" name="postedFile" />
                                    <input type="submit" value="Import" id="Quiz_import" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" />

                                </div>


                            </div>
                            <div class="modal-footer">
                                <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="Cancel">
                                <input type="submit" class="btn btn-outline-primary btn-lg" value="Import">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Thông báo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="text-align: center">
                    <img src="~/images/resources/in-progress-animate.svg" style=" display: block; margin-left: auto; margin-right: auto; width: 50%;" />
                    <br />
                    Vui lòng chờ trong khi hệ thống đang import câu hỏi...
                </div>
            </div>
        </div>
</div>