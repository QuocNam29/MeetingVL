@model MeetingVL.Models.MeetingMinute

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_MeetingVL.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-warning">
                    <h4 class="card-title" id="horz-layout-colored-controls">Create Meeting Minutes</h4>
                </div>

            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form form-horizontal">
                        <div class="form-body">
                            <h4 class="form-section">
                                <i class="icon-direction"></i> Meeting Minutes
                            </h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput1">Meeting date: </label>
                                        <div class="col-md-9">
                                            <input type="datetime-local" id="userinput1" class="form-control border-primary" name="firstname">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput3">Location: </label>
                                        <div class="col-md-9">
                                            <input type="email" id="userinput3" class="form-control border-primary" name="username">
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput2">Process (%): </label>
                                        <div class="col-md-9">
                                            <input type="number" id="userinput2" class="form-control border-primary" name="lastname" min="0" max="100">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput3">stages: </label>
                                        <div class="col-md-9">
                                            <input type="email" id="userinput3" class="form-control border-primary" name="username">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <h4 class="form-section">
                                <i class="icon-note"></i>Content
                            </h4>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <textarea id="userinput8" rows="6" class="form-control col-md-12 border-primary" name="address"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <h4 class="form-section">
                                <i class="ft-info"></i> Issues
                            </h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput2">Issues: </label>
                                        <div class="col-md-9">
                                            <textarea class="form-control border-primary" type="url" id="userinput6"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput3">N/A: </label>
                                        <div class="col-md-9">
                                            <textarea class="form-control border-primary" type="url" id="userinput6"></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <h4 class="form-section">
                                <i class="icon-users"></i> Action
                            </h4>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput8">Action: </label>
                                        <div class="col-md-9">
                                            <textarea id="Action" rows="6" class="form-control col-md-9 border-primary"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput5">Member: </label>
                                        <div class="col-md-9">

                                            <select class="custom-select form-control border-primary" id="Member" data-placeholder="Type to search cities" name="eventType2">
                                                <option value="Banquet">Banquet</option>
                                                <option value="Fund Raiser">Fund Raiser</option>
                                                <option value="Dinner Party">Dinner Party</option>
                                                <option value="Wedding">Wedding</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput5">Deadline: </label>
                                        <div class="col-md-9">
                                            <input class="form-control border-primary" type="date" id="Deadline">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" for="userinput6">Descriptions: </label>
                                        <div class="col-md-9">
                                            <textarea class="form-control border-primary" type="url" id="Descriptions"></textarea>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12">

                                        <button type="button" id="addRow" class="btn btn-primary mb-2"><i class="ft-plus"></i> Add new row</button>
                                    </div>
                                </div>
                            </div>
                            <h4 class="form-section">
                                <i class="icon-users"></i> Action List
                            </h4>
                            <section id="add-row">

                                <div class="row">
                                    <div class="col-12">
                                        <div class="card">
                                            <table class="table table-striped table-bordered add-rows">
                                                <thead>
                                                    <tr>
                                                        <th>No.</th>
                                                        <th>User</th>
                                                        <th>Action</th>
                                                        <th>Deadline</th>
                                                        <th>Description</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    
                                                    </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>
                                </section>

                        </div>

                        <div class="form-actions right">
                            <button type="button" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> Cancel
                            </button>
                            <button type="button" class="btn btn-success">
                                <i class="icon-note"></i> Save
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



