@model MeetingVL.Models.SessionReport

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_MeetingVL.cshtml";
    int session_id = int.Parse(TempData["session_id"].ToString());
    int project_id = int.Parse(TempData["project_id"].ToString());
    int group_id = 0;
    if (TempData["group_id"] != null)
    {
        group_id = int.Parse(TempData["group_id"].ToString());

    }
    string ID_User = Session["ID_User"].ToString();
    
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-warning">
                    <h4 class="card-title" id="horz-layout-colored-controls">Create Meeting Minutes</h4>
                </div>

            </div>
            <div class="card-body">
                <div class="px-3">
                    @using (Html.BeginForm("Create_Meeting", "MeetingMinutes" ))
                    {
                        
                        @Html.Hidden("session_id", session_id)
                        @Html.Hidden("group_id", group_id)
                        <form class="form form-horizontal">
                            <div class="form-body">
                                <h4 class="form-section">
                                    <i class="icon-direction"></i> Meeting Minutes
                                </h4>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="userinput1">Date start: </label>
                                            <div class="col-md-9">
                                                <input type="datetime-local" id="userinput1" class="form-control border-primary" name="meetingDate_start" 
                                                       min="@String.Format("{0:yyyy-MM-ddTHH:mm:ss}",Model.Date_Start)" 
                                                       max="@String.Format("{0:yyyy-MM-ddTHH:mm:ss}",Model.Date_End)"
                                                       required="required" oninvalid="this.setCustomValidity('Please enter Meeting Date Start')" oninput="setCustomValidity('')">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="userinput1">Date end: </label>
                                            <div class="col-md-9">
                                                <input type="datetime-local" id="userinput1" class="form-control border-primary" name="meetingDate_end" 
                                                       min="@String.Format("{0:yyyy-MM-ddTHH:mm:ss}",Model.Date_Start)" 
                                                       max="@String.Format("{0:yyyy-MM-ddTHH:mm:ss}",Model.Date_End)"
                                                       required="required" oninvalid="this.setCustomValidity('Please enter Meeting Date End')" oninput="setCustomValidity('')">
                                            </div>
                                        </div>
                                    </div>

                                </div>


                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="userinput3">Location: </label>
                                            <div class="col-md-9">
                                                <input type="text" id="userinput3" class="form-control border-primary" name="location" placeholder="Location..."
                                                       required="required" oninvalid="this.setCustomValidity('Please enter location')" oninput="setCustomValidity('')">
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="userinput3">stages: </label>
                                            <div class="col-md-9">
                                                <input type="text" id="stages" class="form-control border-primary" name="stages" placeholder="Stages..."
                                                       required="required" oninvalid="this.setCustomValidity('Please enter stages')" oninput="setCustomValidity('')">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="userinput2">Progress (%): </label>
                                            <div class="col-md-9">
                                                <input type="number" id="process" class="form-control border-primary" name="process" min="0" max="100" placeholder="Progress..."
                                                       required="required" oninvalid="this.setCustomValidity('Please enter process')" oninput="setCustomValidity('')">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="userinput8">Objectives: </label>
                                            <div class="col-md-9">
                                                <textarea id="Objectives" rows="6" class="form-control  border-primary" name="objectives" placeholder="Objectives..."
                                                          required="required" oninvalid="this.setCustomValidity('Please enter objectives')" oninput="setCustomValidity('')"></textarea>
                                            </div>
                                        </div>
                                    </div>



                                </div>

                                <div class="row">
                                    @if (group_id == 0)
                                    {
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput3">Member: </label>
                                                <div class="col-md-9">
                                                    <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                                                        @Html.Hidden("member_id", ID_User)
                                                        @ID_User
                                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput8">Mentor: </label>
                                                <div class="col-md-9">
                                                    <textarea id="Objectives" rows="2" class="form-control  border-primary" name="mentor" placeholder="Mentor..."
                                                              required="required" oninvalid="this.setCustomValidity('Please enter objectives')" oninput="setCustomValidity('')"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="userinput8">Customer: </label>
                                                <div class="col-md-9">
                                                    <textarea id="Objectives" rows="2" class="form-control  border-primary" name="customer" placeholder="Customer..."
                                                              required="required" oninvalid="this.setCustomValidity('Please enter objectives')" oninput="setCustomValidity('')"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        @Html.Action("List_Member_Meeting", "ProjectParticipants", new { project_id = project_id, group_id = group_id, action = 1 })
                                    }
                                </div>

                                <h4 class="form-section">
                                    <i class="icon-note"></i>Content
                                </h4>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <div class="col-md-12">
                                                <textarea id="content_meeting" rows="6" class="form-control col-md-12 border-primary" name="content" placeholder="Content..."
                                                          required="required" oninvalid="this.setCustomValidity('Please enter content')" oninput="setCustomValidity('')"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <h4 class="form-section">
                                    <i class="ft-info"></i> Issues
                                </h4>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <div class="col-md-12">
                                                <textarea class="form-control border-primary" type="url" id="userinput6" name="issues" placeholder="Issues..."></textarea>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                         

                                <div class="form-actions right">
                                        <button type="button" class="btn btn-danger mr-1"  onclick="comeback()">
                                            <i class="icon-trash"></i> Cancel
                                        </button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="icon-note"></i> Save
                                    </button>
                                </div>
</form>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>
<script>
    function comeback() {
        history.back();
    }
</script>