@model IEnumerable<MeetingVL.Models.SessionReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_MeetingVL.cshtml";
    int no = 0;
    int project_id = int.Parse(TempData["project_id"].ToString());
    string project_Name = TempData["project_Name"].ToString();
    string project_Description = "";
    if (TempData["project_Description"] != null)
    {
        project_Description = TempData["project_Description"].ToString();
    }
    int category_id = int.Parse(TempData["category_id"].ToString());
    string category_Name = TempData["category_Name"].ToString();

}

<section id="minimal-statistics">
    <div class="row">
        <div class="col-sm-12">
            <ul class="header-controls-list">
                <li class="header-controls-item text-bold-400"><a href="@Url.Action("Index", "Categories")">Category</a></li>
                <ion-icon name="chevron-forward-outline" class="header-direction"></ion-icon>
                <li class="header-controls-item text-bold-400"><a href="@Url.Action("Index", "Projects", new {category_id = category_id })">@category_Name</a></li>
                <ion-icon name="chevron-forward-outline" class="header-direction"></ion-icon>
                <li class="header-controls-item text-bold-400">@project_Name</li>
                
            </ul>
        </div>

        <div class="col-sm-12">
            <h2 class="content-header">@project_Name</h2>
            <div class="complaint-add-row" style="float: right">
                <div id="btnAdd" class="btn btn-primary mb-2">
                    <i class="ft-plus"></i>
                    Add Session Report
                </div>
            </div>
            <p class="content-sub-header">@project_Description</p>
        </div>
    </div>
    
       
    
    <div class="row">
        @foreach (var item in Model)
        {
            no++;
            <div class="col-xl-3 col-lg-6 col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="media align-items-stretch">
                            @if (no % 4 == 1)
                            {
                                <div class="p-2 text-center bg-info rounded-left pt-3">
                                    <ion-icon name="calendar-outline" class="font-large-2 text-white"></ion-icon>
                                    <a href="taskboard.html"></a>
                                </div>
                                <div class="py-2 px-2 media-body">
                                    <a href="taskboard.html"></a>
                                    <h6 class="info text-bold-500">@item.Name</h6>
                                    <p class="courses-time font-small-3">
                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Date_Start)</span>
                                        <span>-</span>
                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Date_End)</span>
                                    </p>
                                    <div class="progress mt-1 mb-0" style="height: 7px;">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>

                            }
                            else if (no % 4 == 2)
                            {
                                <div class="p-2 text-center bg-danger rounded-left pt-3">
                                    <ion-icon name="calendar-outline" class="font-large-2 text-white"></ion-icon>
                                    <a href="taskboard.html"></a>
                                </div>
                                <div class="py-2 px-2 media-body">
                                    <a href="taskboard.html"></a>
                                    <h6 class="info text-bold-500">@item.Name</h6>
                                    <p class="courses-time font-small-3">
                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Date_Start)</span>
                                        <span>-</span>
                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Date_End)</span>
                                    </p>
                                    <div class="progress mt-1 mb-0" style="height: 7px;">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 45%" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                            else if (no % 4 == 3)
                            {
                                <div class="p-2 text-center bg-success rounded-left pt-3">
                                    <ion-icon name="calendar-outline" class="font-large-2 text-white"></ion-icon>
                                    <a href="taskboard.html"></a>
                                </div>
                                <div class="py-2 px-2 media-body">
                                    <a href="taskboard.html"></a>
                                    <h6 class="info text-bold-500">@item.Name</h6>
                                    <p class="courses-time font-small-3">
                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Date_Start)</span>
                                        <span>-</span>
                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Date_End)</span>
                                    </p>
                                    <div class="progress mt-1 mb-0" style="height: 7px;">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>

                            }
                            else if (no % 4 == 0)
                            {
                                <div class="p-2 text-center bg-warning rounded-left pt-3">
                                    <ion-icon name="calendar-outline" class="font-large-2 text-white"></ion-icon>
                                    <a href="taskboard.html"></a>
                                </div>
                                <div class="py-2 px-2 media-body">
                                    <a href="taskboard.html"></a>
                                    <h6 class="info text-bold-500">@item.Name</h6>
                                    <p class="courses-time font-small-3">
                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Date_Start)</span>
                                        <span>-</span>
                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Date_End)</span>
                                    </p>
                                    <div class="progress mt-1 mb-0" style="height: 7px;">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
