@model IEnumerable<MeetingVL.Models.SessionReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_MeetingVL.cshtml";
    int no = 0;
    int project_id = int.Parse(TempData["project_id"].ToString());
    string project_Name = TempData["project_Name"].ToString();
    string project_Description = "";
    if (TempData["project_Description"] != null)
    {
         project_Description = TempData["project_Description"].ToString();
    }

}

<section id="minimal-statistics">
    <div class="row">
        <div>
            <fieldset class="form-group position-relative has-icon-left col-md-2 col-12 mb-1">
                <button type="button" class="btn btn-primary">
                    <i class="fa fa-paper-plane-o hidden-lg-up"></i> Create
                </button>
            </fieldset>
        </div>
        <div class="col-sm-12">
            <h2 class="content-header">@project_Name</h2>
            <p class="content-sub-header">@project_Description</p>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            no++;
            <div class="col-xl-3 col-lg-6 col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="media align-items-stretch">
                            @if (no % 8 == 1)
                            {
                                <div class="p-2 text-center bg-info rounded-left pt-3">
                                    <ion-icon name="calendar-outline" class="font-large-2 text-white"></ion-icon>
                                    <a href="taskboard.html"></a>
                                </div>
                                <div class="py-2 px-2 media-body">
                                    <a href="taskboard.html"></a>
                                    <h6 class="info text-bold-500">@item.Name</h6>
                                    <p class="courses-time font-small-3">
                                        <span class="time-start">@String.Format("{0:dd/MM/yyyy}", item.Date_Start)</span>
                                        <span>-</span>
                                        <span class="time-end">@String.Format("{0:dd/MM/yyyy}", item.Date_End)</span>
                                    </p>
                                    <div class="progress mt-1 mb-0" style="height: 7px;">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
