<script>
    var curDate = new Date();

    // Ngày hiện tại
    var curDay = curDate.getDate();

    // Tháng hiện tại
    var curMonth = curDate.getMonth() + 1;

    

    // Năm hiện tại
    var curYear = curDate.getFullYear();

    var curTime = curDate.getHours() + ":" + curDate.getMinutes() + ":" + curDate.getSeconds();
    
    function getCurrentMonthName(curDate) {
        monthNamelist = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        return monthNamelist[curDate.getMonth()];
    };
    function getCurrentDayName(curDate) {
        monthNamelist = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
        return monthNamelist[curDate.getDay()];
    };
    var setMonth = getCurrentMonthName(curDate);
    var current_day = getCurrentDayName(curDate);

    // Gán vào thẻ HTML
    document.getElementById('current-time').innerHTML = curTime + " " + current_day + " ,  " + curDay + "  " + setMonth + " " + curYear;
</script>
